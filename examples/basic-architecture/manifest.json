{
	"manifest_version": 2,
	"name": "Basic Architecture",
	"description": "Example project good for getting to know a mozilla extensions file structure",
	"version": "0.0.0",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.mozilla.org/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "browserAction/index.html",
		"default_title": "Basic Architecture"
	},
	"page_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_popup": "pageAction/index.html",
		"default_title": "Basic Architecture"
	},
	"options_ui": {
		"page": "options/index.html"
	}
}